{
    "id": "ninja-asdf",
    "version": "2.0.0",
    "name": "Ninja (via asdf)",
    "documentationURL": "http://github.com/devcontainers-contrib/features/tree/main/src/ninja-asdf",
    "description": "Ninja is a small build system with a focus on speed.",
    "options": {
        "version": {
            "default": "latest",
            "description": "Select the version of Ninja (via asdf) to install.",
            "proposals": [
                "latest"
            ],
            "type": "string"
        }
    },
    "installsAfter": [
        "ghcr.io/devcontainers-contrib/features/asdf-package:1.0.0"
    ],
    "dependencies": [
        {
            "feature": "ghcr.io/devcontainers-contrib/features/asdf-package:1.0.0",
            "options": {
                "plugin": "ninja",
                "version": "$options.version"
            }
        }
    ],
    "install_command": "echo 'Done!'",
    "test_command": "ninja --version"
}